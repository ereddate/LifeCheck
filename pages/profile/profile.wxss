.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-card {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.form-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.save-btn {
  background: linear-gradient(135deg, #4a90e2 0%, #3a7bd5 100%);
  color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}