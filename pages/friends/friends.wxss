.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.count {
  font-size: 28rpx;
  color: #999;
}

.actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  background: #4a90e2;
  color: white;
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  border: none;
  min-height: 96rpx;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.action-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.unread-badge {
  position: relative;
  margin-left: 8rpx;
}

.unread-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 32rpx;
}

.friends-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.friend-item:last-child {
  border-bottom: none;
}

.friend-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.friend-info {
  flex: 1;
}

.friend-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.friend-intimacy {
  font-size: 24rpx;
  color: #666;
}

.remind-btn {
  background: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  border: none;
}

.remind-btn::after {
  border: none;
}

.loading-container {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

.empty-container {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}