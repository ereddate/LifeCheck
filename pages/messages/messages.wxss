.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.messages-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.message-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.message-item:last-child {
  border-bottom: none;
}

.message-item.unread {
  background-color: #f9f9ff; /* 未读消息背景色 */
}

.message-item.read {
  background-color: white;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.message-content {
  flex: 1;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.sender-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.message-body {
  margin-bottom: 15rpx;
}

.message-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.message-type {
  display: flex;
  justify-content: flex-start;
}

.type-tag {
  font-size: 22rpx;
  color: #4a90e2;
  background: #e6f2ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.message-status {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4757;
  border-radius: 50%;
  display: inline-block;
}

.loading-container {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-container {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}