.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 40rpx;
}

.detail-header {
  background: linear-gradient(135deg, #07C160 0%, #059b4d 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  color: #fff;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.detail-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
}

.detail-tag.daily {
  background: rgba(24, 144, 255, 0.3);
}

.detail-tag.weekly {
  background: rgba(250, 140, 22, 0.3);
}

.detail-tag.monthly {
  background: rgba(82, 196, 26, 0.3);
}

.detail-card {
  background: #fff;
  margin: -40rpx 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-row:last-child {
  border-bottom: none;
}

.row-label {
  font-size: 28rpx;
  color: #666;
}

.row-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.action-bar {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.btn-checkin {
  width: 100%;
  line-height: 88rpx;
  background: #07C160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  border: none;
}

.btn-checkin.checked {
  background: #d9d9d9;
  color: #999;
}

.btn-delete {
  width: 100%;
  line-height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 44rpx;
  font-size: 28rpx;
}

.history-section {
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-count {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.record-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.record-item {
  display: flex;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #f0f9ff;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #07C160;
}

.date-month {
  font-size: 20rpx;
  color: #999;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.record-time {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-note {
  font-size: 24rpx;
  color: #999;
}

.empty-records {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}