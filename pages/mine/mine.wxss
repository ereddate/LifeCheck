.container {
  min-height: 100vh;
  background: #f7f7f7;
}

.user-header {
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
}

.avatar image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
  background: #fff;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  margin-top: -30rpx;
}

.stat-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-num {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
}

.menu-section {
  background: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
  line-height: 1;
}

.tips-section {
  background: linear-gradient(135deg, #fff7e6 0%, #fffbe6 100%);
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #ffe58f;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fa8c16;
}

.tips-content {
  font-size: 26rpx;
  color: #d46b08;
  line-height: 1.6;
}

.button{
  background: linear-gradient(135deg, #07C160 0%, #059b4d 100%);
  color:#ffffff;
}