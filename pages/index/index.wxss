.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #07C160 0%, #f7f7f7 30%);
}

.header {
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 48rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.filter-bar {
  display: flex;
  padding: 0 30rpx 20rpx;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  background: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background: #07C160;
  color: #fff;
}

.checkin-list {
  padding: 0 30rpx 30rpx;
}

.checkin-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.checkin-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.checkin-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-left: 16rpx;
}

.checkin-tag.daily {
  background: #e6f7ff;
  color: #1890ff;
}

.checkin-tag.weekly {
  background: #fff7e6;
  color: #fa8c16;
}

.checkin-tag.monthly {
  background: #f6ffed;
  color: #52c41a;
}

.checkin-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.checkin-time {
  font-size: 24rpx;
  color: #999;
}

.checkin-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.checkin-status.checked {
  background: #f6ffed;
  color: #52c41a;
}

.checkin-status:not(.checked) {
  background: #fff1f0;
  color: #ff4d4f;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}