.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.login-card {
  max-width: 800rpx;
  min-height: 800rpx;
  background: white;
  border-radius: 10rpx;
  padding: 60rpx 40rpx;
  margin: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow:hidden;
}

.title {
  display: block;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 30rpx;
}

.tab-container {
  display: flex;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.tab-btn {
  flex: 1;
  padding: 12rpx 0;
  border: none;
  background: transparent;
  font-size: 32rpx;
  color: #333;
}

.tab-btn.active {
  background: #07C160;
  color: white;
}

.tab-btn.inactive {
  background: transparent;
  color: #999;
}

.input-group {
  margin-bottom: 20rpx;
}

.input {
  padding: 12rpx 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  font-size: 32rpx;
}

.btn-login, .btn-register {
  width: 100%;
  padding: 24rpx;
  background-color: #07C160;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-login:active, .btn-register:active {
  transform: scale(0.95);
  opacity: 0.8;
}