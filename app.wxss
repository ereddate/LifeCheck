page {
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #07C160;
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  border: none;
  min-height: 96rpx; /* 至少48px(约36rpx)以满足触摸目标大小 */
}

/* 通用按钮样式 */
.button-base {
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  border: none;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.button-base::after {
  border: none;
}

.button-base:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 主要按钮 */
.btn-main {
  background-color: #07C160;
  color: #fff;
}

/* 次要按钮 */
.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}

/* 危险按钮 */
.btn-danger {
  background-color: #ff4757;
  color: #fff;
}

/* 轮廓按钮 */
.btn-outline {
  background-color: transparent;
  color: #07C160;
  border: 2rpx solid #07C160;
}

/* 禁用按钮 */
.btn-disabled {
  background-color: #d9d9d9;
  color: #8c8c8c;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.text-primary {
  color: #07C160;
}

.text-secondary {
  color: #999;
  font-size: 24rpx;
}

.text-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.text-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}